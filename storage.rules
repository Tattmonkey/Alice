rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        (request.auth.token.admin == true || 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role.type == 'admin');
    }
    
    function isArtist() {
      return isAuthenticated() &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role.type == 'artist';
    }

    // Public files (like site assets)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // Artist portfolio images
    match /portfolio/{artistId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && (request.auth.uid == artistId || isAdmin());
    }

    // Product images
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Blog post images
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Message attachments
    match /messages/{messageId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
